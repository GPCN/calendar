        </dependency>
      </dependencies>
      <build>
        <plugins>
           <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-surefire-plugin</artifactId>
              <configuration>
                <systemPropertyVariables>
                  <exo.profiles>hsqldb</exo.profiles>
                </systemPropertyVariables>
              </configuration>
           </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

