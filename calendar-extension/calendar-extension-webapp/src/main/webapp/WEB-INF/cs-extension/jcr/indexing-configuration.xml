<?xml version="1.0"?>
<!DOCTYPE configuration SYSTEM "http://www.exoplatform.org/dtd/indexing-configuration-1.0.dtd">
<configuration xmlns:exo="http://www.exoplatform.com/jcr/exo/1.0">

	<!-- Events AND Tasks -->
	<index-rule nodeType="exo:calendarEvent"> 
		<!-- Event: title -->
  		<property boost="3.0">exo:summary</property>
  		<!-- Event: description -->
 		<property boost="2.0">exo:description</property>
 		<!-- Event: location -->
 		<property boost="1.5">exo:location</property>
 	</index-rule>
 	
</configuration>